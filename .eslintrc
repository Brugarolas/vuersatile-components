{
  "root": true,
  "extends": ["plugin:vue/vue3-essential", "eslint:recommended"],

  "overrides": [{
    "files": ["cypress/e2e/**/*.{cy,spec}.{js,ts,jsx,tsx}"],
    "extends": ["plugin:cypress/recommended"]
  }],

  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "rules": {
    "vue/no-reserved-component-names": 0,
    "vue/multi-word-component-names": 0
  },

  "globals": {
    "process": "readonly",
    "module": "readonly",
    "require": "readonly",
    "__dirname": "readonly"
  }
}